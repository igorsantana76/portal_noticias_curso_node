<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Notícias</title>
		</head>
	<body>

		<h1>Noticías</h1>
		
		<table>
			<tr>
				<td>Id</td>
				<td>Titulo</td>
				<td>Autor</td>
			</tr>
			
			<% noticias.forEach(function(noticia){ %>
				<tr>
					<td><%= noticia.id %></td>
					<td><%= noticia.titulo %></td>
					<td><%= noticia.autor %></td>
				</tr>
			<% })%>
		</table>

	</body>
</html>